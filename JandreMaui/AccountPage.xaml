<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JandreMaui.AccountPage"
             Title="User Account"
             xmlns:viewmodel ="clr-namespace:JandreMaui.ViewModel"
             xmlns:model ="clr-namespace:JandreMaui.Models"
             x:DataType="viewmodel:AccountViewModel"
             BackgroundColor="#072A40">
    <Grid RowDefinitions=".2*,.6*,.1*"
          Margin="5,0,0,0">
        <Grid>
            <Label
                                Text=" User Accounts "
                            TextColor="#F9F7F0"
                            FontSize="40"
                TextDecorations="Underline"
                            
                                Grid.Column="1"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center"
                                Style="{StaticResource MenuLabelStyle}"
                            Margin="55,0,0,0">
            </Label>
        </Grid>
        <ScrollView
            Grid.Row="1"
                    HorizontalScrollBarVisibility="Never"
                    VerticalScrollBarVisibility="Never"
                    Margin="0,32,10,0"
                    >
            <VerticalStackLayout Spacing="12">
                <CollectionView   
                        HeightRequest="280"
                        SelectionMode="Single"
                        ItemsSource="{Binding Useraccounts}"
                    SelectedItem="{Binding SelectedToDo}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"
                                           ItemSpacing="16">
                        </LinearItemsLayout>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:UserAccounts">
                            <Border
                                    VerticalOptions="Fill"
                                    WidthRequest="250"
                                    StrokeThickness="0"
                                    Padding="20"
                                    BackgroundColor="#178CA4">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="24"/>
                                </Border.StrokeShape>
                                <Grid  
                                        RowDefinitions=".25*,.25*,.25*"
                                        RowSpacing="4">
                                    <Label
                                            Text="{Binding Name}"
                                        TextColor="#F9F7F0"
                                            Margin="0,4,0,0"
                                        FontSize="15"
                                        />
                                    <Label Grid.Row="1"
                                           Text="{Binding Surname}"
                                           TextColor="#F9F7F0"
                                           FontSize="15">
                                    </Label>
                                    <Label Grid.Row="2"
                                           Text="{Binding Email}"
                                           TextColor="#F9F7F0"
                                           FontSize="15"></Label>

                                </Grid>

                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </VerticalStackLayout>

        </ScrollView>
        <Grid Grid.Row="3" 
              Margin="5"
              ColumnSpacing="2">
            <Button Text="Add user"
                Grid.Row="2"
                BackgroundColor="LightCyan"
                    TextColor="Black"
                    FontSize="20"
                Margin="1"
                Grid.Column="0"
                    Command="{Binding TapAddCommand}">
            </Button>

        </Grid>
    </Grid>


</ContentPage>